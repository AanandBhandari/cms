<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Owner</th>
      <th>Status</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each comments}}
    <tr>
      <td>{{id}}</td>
      <td>{{user.firstName}}</td>
      <td><input data-id="{{id}}" type="checkbox" {{#if approveComment}} checked {{/if}} name="approveComment"></td>
      <td>{{GenerateTime date 'MMMM Do YYYY'}}</td>
      <td>
                <form action="/admin/comments/{{_id}}?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
                </form>
            </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
